<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.climbthemountain">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">  <!-- used to set action bar-->

        <!-- Activity Register Account-->
        <activity
            android:name=".RegisterAccountData"
            android:label="@string/activity_register"/>

        <!--Activity Register Session-->
        <activity
            android:name=".RegisterSessionData"
            android:label="@string/activity_session"/>

        <!--Activity Register Exam-->
        <activity
            android:name=".RegisterSessionExam"
            android:label="@string/activity_exams"/>

        <!--Activity Summary-->
        <activity
            android:name=".RegisterSessionSummary"
            android:label="@string/activity_summary"/>


        <!--Activity Main - Login-->
        <activity
            android:name=".Login"
            android:label="@string/activity_login">

            <intent-filter>
                <!-- used to set launcher activity -->
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
    </application>

</manifest>