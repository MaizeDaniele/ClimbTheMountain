<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_space2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvSessionSum_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_space2"
                android:layout_marginTop="8dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/name_display"
                android:textSize="18sp" />

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/tvSessionSum_nameShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_space2"
                android:layout_toEndOf="@+id/tvSessionSum_name"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btSessionSum_editUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_space2"
                android:layout_marginEnd="4dp"

                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:background="#fafafa"
                android:src="@drawable/vector_drawable_ic_create_black___px"
                android:text="@string/bt_mod"
                android:textAlignment="gravity" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvSessionSum_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSessionSum_name"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/surname_display"
                android:textSize="18sp" />

            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:id="@+id/tvSessionSum_surnameShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSessionSum_name"
                android:layout_toEndOf="@+id/tvSessionSum_surname"
                android:padding="10dp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvSessionSum_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSessionSum_surname"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/username_display"
                android:textSize="18sp" />

            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:id="@+id/tvSessionSum_usernameShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSessionSum_surname"
                android:layout_toEndOf="@+id/tvSessionSum_surname"
                android:padding="10dp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvSessionSum_sessionStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSessionSum_username"
                android:layout_marginTop="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/session_display"
                android:textSize="18sp" />

            <TextView
                android:textSize="18sp"
                android:id="@+id/tvSessionSum_sessionStartShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSessionSum_username"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/tvSessionSum_sessionStart"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/btSessionSum_editSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tvSessionSum_username"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="15dp"
                android:padding="16dp"
                android:background="#fafafa"
                android:src="@drawable/vector_drawable_ic_create_black___px"
                android:text="@string/bt_mod"
                android:textAlignment="gravity" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvSessionSum_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSessionSum_sessionStart"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/hours_display"
                android:textSize="18sp" />

            <TextView
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:id="@+id/tvSessionSum_hoursShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSessionSum_sessionStartShow"
                android:layout_toEndOf="@+id/tvSessionSum_hours"
                android:padding="10dp" />

            <TextView
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/tvSessionSum_examsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSessionSum_hoursShow"
                android:text="@string/tvListSum"/>

            <ImageButton
                android:id="@+id/btSessionSum_editListExams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/btSessionSum_editSession"
                android:layout_alignTop="@+id/tvSessionSum_examsList"
                android:padding="16dp"
                android:background="#fafafa"
                android:src="@drawable/vector_drawable_ic_create_black___px"
                android:text="@string/bt_mod"
                android:textAlignment="gravity" />

            <ListView
                android:id="@+id/lvSessionSum_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSessionSum_examsList"
                android:layout_marginTop="20dp">

            </ListView>


        </RelativeLayout>


    </ScrollView>


</LinearLayout>




